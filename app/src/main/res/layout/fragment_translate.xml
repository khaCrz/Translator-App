<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.TranslateFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/BlueViolet"
        android:gravity="center"
        android:text="Translate Text"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/from_language"
            android:layout_width="140dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:tooltipText=""

            />

        <ImageButton
            android:id="@+id/transfer_btn"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_swap_horiz_24" />

        <Spinner
            android:id="@+id/to_language"
            android:layout_width="140dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_tv"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="top"
            android:hint="Input Text"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tts_in"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_volume_up_24" />

            <ImageButton
                android:id="@+id/mic_btn"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_mic_24" />

            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_close_24" />
        </LinearLayout>

        <Button
            android:id="@+id/translate_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Translate" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favorite_btn"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="340dp"
                android:src="@drawable/ic_baseline_star_border_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/output_tv"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:hint="Output Text"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tts_out"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="230dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_volume_up_24" />

            <ImageButton
                android:id="@+id/copy_btn"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_content_copy_24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>