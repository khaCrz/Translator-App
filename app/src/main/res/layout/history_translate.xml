<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black">
<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:cardCornerRadius="20dp"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
    android:layout_margin="2dp">
    <LinearLayout
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:backgroundTint="@color/white"
            android:background="@color/white">
            <TextView
                android:id="@+id/idfromlanguage"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="FROM LANGUAGE"
                android:gravity="center"
                android:textAlignment="gravity"
                ></TextView>
            <ImageButton
                android:background="@color/white"
                android:id="@+id/buttonswap"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_swap_horiz_24"></ImageButton>
            <TextView
                android:id="@+id/idtolanguage"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="FROM LANGUAGE"
                android:gravity="center"
                android:textAlignment="gravity"
                ></TextView>


        </LinearLayout>
        <LinearLayout
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:background="@color/black">
            <TextView
                android:id="@+id/textfrom"
                android:textSize="20dp"
                android:background="@color/white"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:text="|"
                android:backgroundTint="@color/black">
            </TextView>
            <TextView
                android:textSize="20dp"
                android:id="@+id/textto"
                android:layout_width="190dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                ></TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageButton
                android:backgroundTint="@color/White"
                android:id="@+id/copyfrom"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_content_copy_24"
                ></ImageButton>
            <ImageButton
                android:backgroundTint="@color/white"
                android:id="@+id/copyto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_content_copy_24"
                ></ImageButton>

        </LinearLayout>
        <TextView
            android:id="@+id/datetimehistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DATE TIME"
            android:textSize="20dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@color/white"
            ></TextView>
        
    </LinearLayout>
    



</androidx.cardview.widget.CardView>
</LinearLayout>